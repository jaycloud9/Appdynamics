apiVersion: v1
kind: PersistentVolume
metadata:
  name: %pv
spec:
  capacity:
    storage: %size
  accessModes:
  - ReadWriteMany
  - ReadWriteOnce
  persistentVolumeReclaimPolicy: Recycle
  nfs:
    path: {{oscp_storage_nfs_directory}}/pv/%pv
  {% for host in groups['Type_storage'] %}
  {% if loop.first %}
server: {{hostvars[host]['private_ip'] }}
  {% endif %}
  {% endfor %}
