[OSEv3:children]
masters
nodes
etcd
 
# Set variables common for all OSEv3 hosts
[OSEv3:vars]
ansible_ssh_user=ose
ansible_sudo=true
ansible_become=yes
 
deployment_type=openshift-enterprise
#Sets node names to hostname rather than IP
openshift_set_hostname=true
 
# Simple HTPASSWD authentication, for production environments connecting to AD would be recommended
openshift_master_identity_providers=[{'name': 'htpasswd_auth', 'login': 'true', 'challenge': 'true', 'kind': 'HTPasswdPasswordIdentityProvider', 'filename': '/etc/origin/master/htpasswd'}]
 
# Native high availbility cluster method with optional load balancer.
# If no lb group is defined installer assumes that a load balancer has
# been preconfigured. For installation the value of
# openshift_master_cluster_hostname must resolve to the load balancer
# or to one or all of the masters defined in the inventory if no load
# balancer is present.
openshift_master_cluster_method=native
openshift_master_cluster_hostname=c2-rhos-master-1
openshift_master_cluster_public_hostname=cluster2.temenosgroup.com
 
openshift_master_api_port=443
openshift_master_console_port=443
 
## Infrastructure
os_sdn_network_plugin_name='redhat/openshift-ovs-multitenant'
 
openshift_master_metrics_public_url=https://metrics.apps.cluster2.temenosgroup.com/hawkular/metrics
openshift_master_logging_public_url=https://logging.apps.cluster2.temenosgroup.com

osm_use_cockpit=false
 
## ROUTER
openshift_router_selector="target=router"
openshift_hosted_router_selector="target=router"
openshift_hosted_router_replicas=2
 
## REGISTRY
openshift_registry_selector="purpose=infra"
openshift_hosted_registry_replicas=1
openshift_hosted_registry_storage_kind=nfs
openshift_hosted_registry_storage_host=c2-rhos-master-1
openshift_hosted_registry_storage_nfs_directory=/exports
 
## Project Defaults
openshift_master_default_subdomain=apps.cluster2.temenosgroup.com
osm_default_node_selector="purpose=work"
 
# override the default controller lease ttl
#osm_controller_lease_ttl=30
 
