#!/usr/bin/env groovy


  stage('package') {
    node {
        sh 'echo "cloning the GIT repoA"'
	sh 'mkdir /tmp/package'
    }
  }
  stage('Promote') {
    node {
        sh 'echo "START BUILD PROCESS"'
	sh 'mkdir /tmp/build'
    }
  }
  stage('Deploy') {
    node {
        sh 'echo "START DEPLOYMENT"'
	sh 'mkdir /tmp/deploy'
    }
  }
